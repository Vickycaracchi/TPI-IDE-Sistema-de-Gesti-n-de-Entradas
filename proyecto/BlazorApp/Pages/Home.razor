@page "/"
@using DTOs
@inject NavigationManager Navigation


<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4 shadow" style="width: 380px; border-radius: 12px;">

        <h3 class="text-center mb-4">Bienvenido al sistema</h3>

        <button class="btn btn-primary w-100 mb-3" @onclick="IrALogin">
            Ingresar
        </button>

        <button class="btn btn-secondary w-100" @onclick="IrARegistro">
            Registrar Usuario
        </button>

        @if (!string.IsNullOrEmpty(Bienvenida))
        {
            <div class="alert alert-success mt-4 text-center">@Bienvenida</div>
        }

    </div>
</div>

@code {
    private string Bienvenida;

    private void IrALogin()
    {
        Navigation.NavigateTo("/login");
    }

    private void IrARegistro()
    {
        Navigation.NavigateTo("/registrarusuario");
    }
}