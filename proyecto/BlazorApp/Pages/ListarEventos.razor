@page "/listareventos"
@using API.Clients
@using DTOs
@inject NavigationManager Navigation
@inject LoginState LoginState
<Header />
<br />
<br />
@if (LoginState.Usuario is null)
{
    LoginState.MensajeTemporal = "Debe iniciar sesión para acceder al listado de eventos";
    Navigation.NavigateTo("/login");
    return;
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Listado de Eventos</h3>
        </div>

        <div class="card-body">

            @if (IsLoading)
            {
                <div class="d-flex justify-content-center my-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(Error))
            {
                <div class="alert alert-danger">@Error</div>
            }
            else if (Eventos is not null && Eventos.Any())
            {
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var evento in Eventos)
                        {
                            <tr>
                                <td>@evento.Nombre</td>
                                <td>@evento.Desc</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No hay eventos para mostrar.</div>
            }
        </div>

        <div class="card-footer text-end">
            <button class="btn btn-secondary" @onclick="Volver">
                Volver al Menú
            </button>
        </div>
    </div>
</div>

@code {
    private List<EventoDTO> Eventos;
    private bool IsLoading = true;
    private string Error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Eventos = (await EventoApiClient.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            Error = $"Error al cargar la lista de eventos: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void Volver()
    {
        Navigation.NavigateTo("/menucliente");
    }
}