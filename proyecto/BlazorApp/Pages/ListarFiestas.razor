@page "/listarfiestas"
@using API.Clients
@using DTOs
@inject NavigationManager Navigation
@inject LoginState LoginState
<Header />
<br />
<br />
<br />
<br />

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Listado de Fiestas</h3>
        </div>

        <div class="card-body">

            @if (IsLoading)
            {
                <div class="d-flex justify-content-center my-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else if (!string.IsNullOrEmpty(Error))
            {
                <div class="alert alert-danger">@Error</div>
            }
            else if (FiestasParaMostrar is not null && FiestasParaMostrar.Any())
            {
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha</th>
                            <th>Lugar</th>
                            <th>Evento</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var fiesta in FiestasParaMostrar)
                        {
                            <tr>
                                <td>@fiesta.FechaFiesta.ToShortDateString()</td>
                                <td>@fiesta.NombreLugar</td>
                                <td>@fiesta.NombreEvento</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No hay fiestas para mostrar.</div>
            }

        </div>

        <div class="card-footer text-end">
            <button class="btn btn-secondary" @onclick="Volver">
                Volver al Menú
            </button>
        </div>
    </div>
</div>
<Footer />

@code {
    private bool IsLoading = true;
    private string Error;
    private List<FiestaParaMostrarDTO> FiestasParaMostrar;

    protected override async Task OnInitializedAsync()
    {
        if (LoginState.Usuario == null)
        {
            LoginState.MensajeTemporal = "Debe iniciar sesión para acceder al listado de fiestas";
            Navigation.NavigateTo("/login");
            return;
        }
        try
        {
            var lugares = (await LugarApiClient.GetAllAsync()).ToList();
            var eventos = (await EventoApiClient.GetAllAsync()).ToList();
            var fiestas = await FiestaApiClient.GetAllAsync();

            FiestasParaMostrar = fiestas.Select(f => new FiestaParaMostrarDTO
                {
                    IdFiesta = f.IdFiesta,
                    FechaFiesta = f.FechaFiesta,
                    NombreLugar = lugares.FirstOrDefault(l => l.Id == f.IdLugar)?.Nombre ?? "Desconocido",
                    NombreEvento = eventos.FirstOrDefault(e => e.Id == f.IdEvento)?.Nombre ?? "Desconocido"
                }).ToList();
        }
        catch (Exception ex)
        {
            Error = $"Error al cargar la lista de fiestas: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void Volver()
    {
        Navigation.NavigateTo("/menucliente");
    }

    private class FiestaParaMostrarDTO
    {
        public int IdFiesta { get; set; }
        public DateTime FechaFiesta { get; set; }
        public string NombreLugar { get; set; }
        public string NombreEvento { get; set; }
    }
}