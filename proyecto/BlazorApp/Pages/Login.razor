@page "/login"
@using Application.Services
@using BlazorApp.Authentication
@using DTOs
@using Microsoft.AspNetCore.Components.Authorization

<h3>Iniciar Sesión</h3>

<div>
    <label>DNI:</label>
    <input @bind="loginDto.Dni" class="form-control" />
</div>
<div>
    <label>Contraseña:</label>
    <input type="password" @bind="loginDto.Contrasena" class="form-control" />
</div>
<button @onclick="HandleLogin" class="btn btn-primary">Entrar</button>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}

@code {
    private LoginDTO loginDto = new();
    private string error = string.Empty;

    [Inject] NavigationManager Nav { get; set; } = default!;
    [Inject] AuthenticationStateProvider AuthProvider { get; set; } = default!;
    [Inject] IHttpClientFactory HttpClientFactory { get; set; } = default!;

    private async Task HandleLogin()
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient("WebAPI");
            var response = await httpClient.PostAsJsonAsync("loginUsuario", loginDto);

            if (response.IsSuccessStatusCode)
            {
                var usuario = await response.Content.ReadFromJsonAsync<UsuarioDTO>();
                
                if (usuario != null)
                {
                    // Si usas CustomAuthStateProvider, aquí debes notificar el login
                    if (AuthProvider is CustomAuthStateProvider customProvider)
                    {
                        customProvider.SetUser(usuario);
                    }
                    Nav.NavigateTo("/");
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                error = "Credenciales incorrectas.";
            }
            else
            {
                error = "Error al iniciar sesión.";
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }
}