@page "/login"
@using API.Clients
@using DTOs
@inject NavigationManager Navigation
@inject LoginState LoginState

<h3>Iniciar Sesión</h3>

<div class="mb-3">
    <label for="dni" class="form-label">DNI</label>
    <input type="text" id="dni" class="form-control" @bind="Dni" />
    @if (!string.IsNullOrEmpty(DniError))
    {
        <div class="text-danger">@DniError</div>
    }
</div>
<div class="mb-3">
    <label for="contrasena" class="form-label">Contraseña</label>
    <input type="password" id="contrasena" class="form-control" @bind="Contrasena" />
    @if (!string.IsNullOrEmpty(ContrasenaError))
    {
        <div class="text-danger">@ContrasenaError</div>
    }
</div>
<button class="btn btn-primary" @onclick="EnviarLoginVendedor" disabled="@IsLoading">Ingresar</button>

@if (!string.IsNullOrEmpty(LoginError))
{
    <div class="alert alert-danger mt-3">@LoginError</div>
}

@code {
    private string Dni { get; set; } = string.Empty;
    private string Contrasena { get; set; } = string.Empty;
    private string DniError { get; set; } = string.Empty;
    private string ContrasenaError { get; set; } = string.Empty;
    private string LoginError { get; set; } = string.Empty;
    private bool IsLoading { get; set; } = false;

    public string TipoUsuario { get; private set; }
    public UsuarioDTO usuarioIngresado { get; private set; }

    private async Task EnviarLoginVendedor()
    {
        LimpiarErrores();
        if (ValidateVendedor())
        {
            IsLoading = true;
            try
            {
                var login = new LoginDTO
                    {
                        Dni = Dni,
                        Contrasena = Contrasena
                    };

                var usuario = await UsuarioApiClient.LoginAsync(login);
                if (usuario != null)
                {
                    TipoUsuario = usuario.Tipo;
                    usuarioIngresado = usuario;

                    LoginState.SetUsuario(usuario);


                    if (TipoUsuario == "Cliente")
                    {
                        Navigation.NavigateTo("/menucliente");
                    }
                    else if (TipoUsuario == "Administrador" || TipoUsuario == "Vendedor")
                    {
                        Navigation.NavigateTo("/enconstruccion");
                    }
                }
                else
                {
                    LoginError = "Credenciales inválidas. Intente nuevamente.";
                }
            }
            catch (Exception ex)
            {
                LoginError = $"Ocurrió un error al intentar iniciar sesión: {ex.Message}";
            }
            finally
            {
                IsLoading = false;
            }
        }
    }

    private bool ValidateVendedor()
    {
        bool isValid = true;

        if (string.IsNullOrWhiteSpace(Dni))
        {
            DniError = "El DNI es Requerido";
            isValid = false;
        }
        if (string.IsNullOrWhiteSpace(Contrasena))
        {
            ContrasenaError = "La contraseña es Requerida";
            isValid = false;
        }
        return isValid;
    }

    private void LimpiarErrores()
    {
        DniError = string.Empty;
        ContrasenaError = string.Empty;
        LoginError = string.Empty;
    }
}